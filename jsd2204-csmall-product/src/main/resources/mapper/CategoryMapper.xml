<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.csmall.product.mapper.CategoryMapper">

    <!--int insert(Category category)-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
    insert into pms_category(name,parent_id,depth,keywords,sort,icon,enable,
                          is_parent,is_display)
    values (#{name},#{parentId},#{depth},#{keywords},#{sort},#{icon},#{enable},
                          #{isParent},#{isDisplay})
    </insert>

    <delete id="deleteById">
        delete from pms_category where id=#{id}
    </delete>

    <delete id="deleteByIds">
        delete from pms_category where id in (
            <foreach collection="list" separator="," item="id">
                #{id}
            </foreach>
            )
    </delete>

    <update id="update">
        update pms_category
        <set>
            <if test="parentId!=null">
                parent_id = #{parentId},
            </if>
            <if test="isDisplay!=null">
                is_display = #{isDisplay},
            </if>
            <if test="keywords!=null">
                keywords = #{keywords},
            </if>
            <if test="sort!=null">
                sort = #{sort},
            </if>
            <if test="isParent!=null">
                is_parent = #{isParent},
            </if>
            <if test="icon!=null">
                icon = #{icon},
            </if>
            <if test="keywords!=null">
                keywords = #{keywords},
            </if>
            <if test="depth!=null">
                depth = #{depth},
            </if>
            <if test="name!=null">
                name = #{name},
            </if>
        </set>
        where id=#{id}
    </update>


</mapper>
